<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spotcondition.damages.editloop.DamageBasicsFragment">


    <EditText
        android:id="@+id/drain_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/drain_picture_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textCursorDrawable="@drawable/link_cursor"
        android:background="@color/bulma_light"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:hint="Remark"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        />

    <ImageButton
        android:id="@+id/drain_picture_button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginVertical="24dp"
        app:layout_constraintTop_toBottomOf="@id/drain_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_square_24"
        android:backgroundTint="@color/bulma_link"
        android:src="@drawable/ic_round_camera_alt_24"
        app:tint="@color/bulma_white"
        android:padding="20dp"
        android:scaleType="fitCenter"
        />
</androidx.constraintlayout.widget.ConstraintLayout>