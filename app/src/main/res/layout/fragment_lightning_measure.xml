<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spotcondition.lightning.editloop.LightningMeasureFragment"
    >

    <Spinner
        android:id="@+id/measure_method_spinner"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_spinner"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/receptors_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/measure_method_spinner"
        tools:listitem="@layout/item_receptor"
        />

</RelativeLayout>