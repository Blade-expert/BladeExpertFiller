<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@id/label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Position sur le profil"
        android:textColor="@color/bulma_black"
        android:textSize="40sp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button_i1"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="I1"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="LE\nPANEL" />

        <Button
            android:id="@+id/button_i2"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="I2"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="SPAR\nCAP" />

        <Button
            android:id="@+id/button_i3"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="I3"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="TE\nPANEL" />

        <Button
            android:id="@+id/button_iw1l"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="W1L"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="WEB 1\nLE" />

        <Button
            android:id="@+id/button_iw1t"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="W1T"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="WEB 1\nTE" />


        <Button
            android:id="@+id/button_iw2l"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="W2L"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="WEB 2\nLE" />

        <Button
            android:id="@+id/button_iw2t"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="W2T"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="WEB 2\nTE" />

        <Button
            android:id="@+id/button_iw3l"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="W3L"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="WEB 3\nLE" />

        <Button
            android:id="@+id/button_iw3t"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="W3T"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="WEB 3\nTE" />

        <Button
            android:id="@+id/button_iw4l"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="W4L"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="WEB 4\nLE" />

        <Button
            android:id="@+id/button_iw4t"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="W4T"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="WEB 4\nTE" />

        <Button
            android:id="@+id/button_ipna"
            android:layout_width="@dimen/button_width_indoor_profile"
            android:layout_height="@dimen/button_height_indoor_profile"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:textSize="20sp"
            android:text="N/A\n" />

    </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>