<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spotcondition.lightning.LightningActivity">

    <TextView
        android:id="@+id/receptors_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="32dp"
        android:textColor="@color/bulma_dark"
        android:textSize="30sp"
        android:text="Lightning Measures"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lps_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/receptors_title"
        android:layout_marginBottom="10dp">

        <Spinner
            android:id="@+id/measure_method_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/lps_description_button"
            tools:listitem="@layout/item_spinner"/>

        <ImageButton
            android:id="@+id/lps_description_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/measure_method_spinner"
            app:layout_constraintRight_toLeftOf="@id/lps_picture_button"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/bulma_white"
            android:padding="20dp"
            android:scaleType="fitCenter"

            />

        <ImageButton
            android:id="@+id/lps_picture_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/lps_description_button"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link"
            android:src="@drawable/ic_round_camera_alt_24"
            app:tint="@color/bulma_white"
            android:padding="20dp"
            android:scaleType="fitCenter"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/receptors_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lps_constraint_layout"
        tools:listitem="@layout/item_receptor"
        />

</RelativeLayout>