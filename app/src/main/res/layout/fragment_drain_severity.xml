<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:columnCount="2"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/button_sev_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_dark"
                android:foregroundTint="@color/bulma_link"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="CAT. 1\nOK"
                android:lineHeight="40sp"
                android:textColor="@color/bulma_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_sev_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_dark"
                android:foregroundTint="@color/bulma_link"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="CAT. 2\nL OK"
                android:lineHeight="40sp"
                android:textColor="@color/bulma_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_sev_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_dark"
                android:foregroundTint="@color/bulma_link"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="CAT. 4\nN OK"
                android:lineHeight="40sp"
                android:textColor="@color/bulma_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_sev_na"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_link_light"
                android:foregroundTint="@color/bulma_link"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="-1"
                android:text="N/A"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_sev_3"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_dark"
                android:foregroundTint="@color/bulma_link"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="CAT. 3"
                android:textColor="@color/bulma_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_sev_5"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_dark"
                android:foregroundTint="@color/bulma_link"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="CAT. 5"
                android:textColor="@color/bulma_light"
                android:textSize="30sp" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>