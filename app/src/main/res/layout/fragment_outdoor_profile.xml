<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@id/label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Depth on profile"
        android:textColor="@color/bulma_black"
        android:textSize="40sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/button_o1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_link_light"
                android:foregroundTint="@color/bulma_link"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="O1"
                android:text="LE\nPANEL" />

            <Button
                android:id="@+id/button_o2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_link_light"
                android:foregroundTint="@color/bulma_link"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="O2"
                android:text="SPAR\nCAP" />

            <Button
                android:id="@+id/button_o3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_link_light"
                android:foregroundTint="@color/bulma_link"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:tag="O3"
                android:text="TE\nPANEL" />



            <Button
                android:id="@+id/button_opna"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_square_24"
                android:backgroundTint="@color/bulma_link_light"
                android:foregroundTint="@color/bulma_link"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="N/A\n" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>