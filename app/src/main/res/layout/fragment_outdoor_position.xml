<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@id/label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Position du dÃ©faut"
        android:textColor="@color/bulma_black"
        android:textSize="40sp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_ona"
        app:layout_constraintVertical_chainStyle="packed"
        >

        <Button
            android:id="@+id/button_ole"
            android:layout_width="180dp"
            android:layout_height="@dimen/button_height_outdoor_position"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:textSize="30sp"
            android:tag="OLE"
            android:text="LE" />

        <Button
            android:id="@+id/button_ote"
            android:layout_width="180dp"
            android:layout_height="@dimen/button_height_outdoor_position"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:textSize="30sp"
            android:tag="OTE"
            android:text="TE" />

        <Button
            android:id="@+id/button_ops"
            android:layout_width="180dp"
            android:layout_height="@dimen/button_height_outdoor_position"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:textSize="30sp"
            android:tag="OPS"
            android:text="PS" />

        <Button
            android:id="@+id/button_oss"
            android:layout_width="180dp"
            android:layout_height="@dimen/button_height_outdoor_position"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:textSize="30sp"
            android:tag="OSS"
            android:text="SS" />

        <Button
            android:id="@+id/button_ort"
            android:layout_width="180dp"
            android:layout_height="@dimen/button_height_outdoor_position"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:textSize="30sp"
            android:tag="ORT"
            android:text="ROOT" />

        <Button
            android:id="@+id/button_otp"
            android:layout_width="180dp"
            android:layout_height="@dimen/button_height_outdoor_position"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:textSize="30sp"
            android:tag="OTP"
            android:text="TIP" />


    </GridLayout>

    <Button
        android:id="@+id/button_ona"
        android:layout_width="180dp"
        android:layout_height="@dimen/button_height_outdoor_position"
        android:layout_margin="0dp"
        android:background="@drawable/ic_square_24"
        android:backgroundTint="@color/bulma_link_light"
        android:foregroundTint="@color/bulma_link"
        android:textSize="30sp"
        android:text="N/A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_layout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>