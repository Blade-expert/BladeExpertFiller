<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Choisir gravitÃ©"
        android:textSize="40sp"
        android:textColor="@color/bulma_black"
        />

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        >

        <Button
            android:id="@+id/button_sev_1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_dark"
            android:foregroundTint="@color/bulma_link"
            android:textColor="@color/bulma_light"
            android:textSize="30sp"
            android:text="CAT. 1"
            />
        <Button
            android:id="@+id/button_sev_2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_dark"
            android:foregroundTint="@color/bulma_link"
            android:textColor="@color/bulma_light"
            android:textSize="30sp"
            android:text="CAT. 2"
            />
        <Button
            android:id="@+id/button_sev_3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_dark"
            android:foregroundTint="@color/bulma_link"
            android:textColor="@color/bulma_light"
            android:textSize="30sp"
            android:text="CAT. 3"
            />

        <Button
            android:id="@+id/button_sev_4"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_dark"
            android:foregroundTint="@color/bulma_link"
            android:textColor="@color/bulma_light"
            android:textSize="30sp"
            android:text="CAT. 4"
            />

        <Button
            android:id="@+id/button_sev_5"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_dark"
            android:foregroundTint="@color/bulma_link"
            android:textColor="@color/bulma_light"
            android:textSize="30sp"
            android:text="CAT. 5"
            />

        <Button
            android:id="@+id/button_sev_na"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="0dp"
            android:background="@drawable/ic_square_24"
            android:backgroundTint="@color/bulma_link_light"
            android:foregroundTint="@color/bulma_link"
            android:tag="-1"
            android:textSize="30sp"
            android:text="N/A"
            />
    </GridLayout>



</LinearLayout>